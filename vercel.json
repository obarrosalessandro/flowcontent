{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "buildCommand": "npm install --platform=linux --arch=x64 && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install --platform=linux --arch=x64"
}